{
	"tabWidth": 2,
	"semi": false,
	"arrowParens": "avoid",
	"useTabs": true,
	"jsxSingleQuote": true,
	"singleQuote": true,
	"trailingComma": "none",
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrder": [
		"^.(css|scss)$",
		"<THIRD_PARTY_MODULES>",
		"^components/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
